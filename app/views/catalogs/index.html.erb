<!-- レイアウトにタイトルを渡すために追加 -->
<% provide(:title, 'Listing catalogs') %>

<!-- レスポンシブ対応のために div を追加 -->
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Sum</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @catalogs.each do |catalog| %>
        <tr>
          <td><%= catalog.name %></td>
          <td><%= catalog.sum %></td>
          <td><%= link_to 'Show', catalog %></td>
          <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
          <!-- 削除ボタンにクラスを追加 -->
          <td><%= link_to 'Destroy', catalog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- ユーザー追加ボタンにクラスを追加 -->
<p><%= link_to 'New Catalog', new_catalog_path, class: 'btn btn-primary' %></p>
