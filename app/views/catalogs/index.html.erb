<!-- レイアウトにタイトルを渡すために追加 -->
<% provide(:title, 'Listing catalogs') %>

<div class="table-responsive">
<table class="item-list100" border="0">
  <tr>
    <td width="20%" class="head1">
      <span class="font-head1">在庫一覧</span>
    </td>
    <td width="80%" class="head1" align="right">
      <%= link_to 'New Catalog', new_catalog_path, class: 'btn btn-primary' %>
    </td>
  </tr>
  <!-- 1item -->
  <tr>
    <td width="100%" colspan="2">
      <table class="item-list100" border="1" bordercolor="#ddd">
      <% @catalogs.each do |catalog| %>
        <tr>
          <td width="10%">
            <img src="" width="100" height="100" />
          </td>
          <td>
            <table class="item-list100" border="0">
              <tr>
                <td width="15%"><span class="font-def1">種類　</span></td>
                <td width="85%" colspan="3" align="left"><span class="font-def1"><%= catalog.group %></font></td>
              </tr>
              <tr>
                <td width="15%"><span class="font-def1">商品名</span></td>
                <td width="35%"><span class="font-def1"><%= catalog.name %></span></td>
                <td width="50%"><span class="font-def1">(&nbsp;<%= catalog.manufacturer_id %>&nbsp;)</span></td>
              </tr>
              <tr>
                <td width="15%"><span class="font-def1">数量　</span></td>
                <td width="85%" colspan="3"><span class="font-def1"><%= catalog.sum %></span></td>
              </tr>
              <tr><td height="10"></td></tr>
              <tr>
                <td><span class="link-color"><%= link_to 'Show', catalog %></span></td>
                <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
              </tr>
            </table>
          </td>
        </tr>
      <% end %>
      </table>
    </td>
  </tr>
</table>
</div>
<br><br><br>

<!-- レスポンシブ対応のために div を追加 -->
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Group</th>
        <th>Manufacturer</th>
        <th>Name</th>
        <th>Sum</th>
        <th>Use-by Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @catalogs.each do |catalog| %>
        <tr>
          <td><%= catalog.group %></td>
          <td><%= catalog.manufacturer.manufacturer_name %></td>
          <td><%= catalog.name %></td>
          <td><%= catalog.sum %></td>
          <td><%= catalog.use_by_date %></td>
          <td><%= link_to 'Show', catalog %></td>
          <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
          <!-- 削除ボタンにクラスを追加 -->
          <td><%= link_to 'Destroy', catalog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- ユーザー追加ボタンにクラスを追加 -->
<p>
  <%= link_to 'New Catalog', new_catalog_path, class: 'btn btn-primary' %>
</p>
